<?xml version="1.0" encoding="utf-8"?>
<in.srain.cube.views.ptr.PtrClassicFrameLayout
    android:id="@+id/ralm_pfl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.superdroid.base.customuis.BottomListenScrollView
        android:id="@+id/ralm_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/ralm_fl_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/ralm_fl_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ralm_fl_header"
                >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ralm_fl_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ralm_fl_center">
            </FrameLayout>
        </RelativeLayout>
    </com.superdroid.base.customuis.BottomListenScrollView>
</in.srain.cube.views.ptr.PtrClassicFrameLayout>
